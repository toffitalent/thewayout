doctype transitional
html(xmlns="http://www.w3.org/1999/xhtml")
  head
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="x-apple-disable-message-reformatting")
    meta(http-equiv="Content-Type" content="text/html; charset=UTF-8")
    meta(name="color-scheme" content="light dark")
    meta(name="supported-color-schemes" content="light dark")
    block head
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:400,700&display=swap")
    link(rel="stylesheet" href=require('@app/styles/index.scss') data-inline="true")
    <!--[if mso]>
    style(type="text/css").
      .f-fallback {
        font-family: Arial, sans-serif;
      }
    <![endif]-->
  body
    //- Preheader
    span.preheader
      block preheader
    table(class="email__wrapper" width="100%" cellpadding="0" cellspacing="0" role="presentation")
      tr
        td(align="center")
          table(class="email__content" width="100%" cellpadding="0" cellspacing="0" role="presentation")
            //- Header
            block header
              include masthead.pug

            //- Body
            tr
              td(class="email__body" width="570" cellpadding="0" cellspacing="0")
                table(class="email__body__inner" align="center" width="570" cellpadding="0" cellspacing="0" role="presentation")
                  //- Content
                  tr
                    td.content
                      .f-fallback
                        block content
                          span Email body
            //- Footer
            block footer
              include footer.pug
