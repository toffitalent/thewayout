tr
  td
    table(class="email__footer" align="center" width="570" cellpadding="0" cellspacing="0" role="presentation")
      tr
        td(class="content" align="center")
          -
            const socials = [
              { name: 'facebook', icon: require('@app/assets/icon-facebook.png') },
              { name: 'instagram', icon: require('@app/assets/icon-instagram.png') },
              { name: 'linkedin', icon: require('@app/assets/icon-linkedin.png') },
              { name: 'twitter', icon: require('@app/assets/icon-twitter.png') },
              { name: 'youtube', icon: require('@app/assets/icon-youtube.png') },
            ];
            const hasSocialLinks = !!socials.find(({ name }) => !!config.get(`company.${name}Url`));
          if hasSocialLinks
            table(class="social" align="center" width="570" cellpadding="0" cellspacing="0" role="presentation")
              tr
                each social in socials
                  if config.get(`company.${social.name}Url`)
                    td(class="align-center")
                      a(href=config.get(`company.${social.name}Url`) target="_blank")
                        img(src=social.icon alt=social.name class="social__icon")
          p.f-fallback.sub.align-center &copy; #{new Date().getFullYear()} #{config.get('company.name')}. All rights reserved.
          p.f-fallback.sub.align-center
            | #{config.get('company.legalName')}
            br
            a(href="#") #{config.get('company.address')}
            br
            a(href="#") #{config.get('company.city')}, #{config.get('company.region')} #{config.get('company.postalCode')}
