{
  "name": "@two/api",
  "version": "1.0.0",
  "main": "build/index.js",
  "author": "Disruptive Labs",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "tsc -b tsconfig.build.json && webpack build",
    "clean": "rimraf .cache build coverage",
    "db:migrate": "knex --knexfile build/db/knexfile.js migrate:latest",
    "db:seed": "knex --knexfile build/db/knexfile.js seed:run",
    "dev": "webpack serve",
    "run-task": "node build/worker.js run",
    "start": "node build/app.js",
    "start-worker": "node build/worker.js",
    "test": "jest -i --coverage",
    "type-check": "tsc -b tsconfig.build.json"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.362.0",
    "@aws-sdk/client-sqs": "^3.362.0",
    "@aws-sdk/s3-presigned-post": "^3.362.0",
    "@disruptive-labs/objection-plugins": "file:../../vendor/@disruptive-labs/objection-plugins",
    "@disruptive-labs/server": "file:../../vendor/@disruptive-labs/server",
    "@two/config": "*",
    "@two/mail": "*",
    "@two/shared": "*",
    "@faker-js/faker": "^7.6.0",
    "@sentry/node": "^7.80.0",
    "analytics-node": "^6.2.0",
    "axios": "^0.27.2",
    "bcrypt": "^5.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "lodash": "^4.17.21",
    "mime": "^3.0.0",
    "objection": "^3.0.1",
    "pg": "^8.11.1",
    "sqs-consumer": "^7.2.1",
    "url-join": "^4.0.1",
    "uuid": "^9.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/analytics-node": "^3.1.11",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/mime": "^3.0.1",
    "@types/node": "^18.16.18",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.10",
    "@types/url-join": "^4.0.1",
    "@types/uuid": "^9.0.2",
    "jest": "^29.5.0",
    "jest-junit": "^16.0.0",
    "rimraf": "^3.0.2",
    "run-script-webpack-plugin": "^0.2.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "clearMocks": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,ts}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/db/"
    ],
    "globalSetup": "<rootDir>/test/setup.js",
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/src/$1",
      "^@test$": "<rootDir>/test/index.ts"
    },
    "modulePaths": [
      "<rootDir>/node_modules/",
      "<rootDir>/../../node_modules/",
      "node_modules"
    ],
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest.test.js"
    ],
    "testEnvironment": "node",
    "testTimeout": 10000
  },
  "jest-junit": {
    "outputDirectory": "./artifacts/jest",
    "outputName": "results.xml"
  }
}
