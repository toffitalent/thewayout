{
  "name": "@disruptive-labs/aws",
  "version": "2.3.2",
  "description": "Disruptive Labs AWS constructs",
  "main": "dist/index.js",
  "repository": "https://github.com/disruptive-labs/aws.git",
  "author": "Disruptive Labs",
  "license": "UNLICENSED",
  "private": false,
  "files": [
    "README.md",
    "dist/"
  ],
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && webpack && copyfiles -u 1 'src/**/Dockerfile' 'src/**/package.json' dist",
    "lint": "tsc --noEmit && eslint .",
    "prepare": "husky install",
    "release": "release-it",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@types/sharp": "^0.30.5",
    "content-security-policy-builder": "^2.1.1",
    "fs-extra": "^10.1.0",
    "tmp": "^0.2.1"
  },
  "peerDependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "^2.12.0-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "^2.12.0-alpha.0",
    "aws-cdk-lib": "^2.12.0",
    "constructs": "^10.0.56"
  },
  "devDependencies": {
    "@aws-cdk/aws-apigatewayv2-alpha": "^2.37.1-alpha.0",
    "@aws-cdk/aws-apigatewayv2-integrations-alpha": "^2.37.1-alpha.0",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/aws-lambda": "^8.10.102",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.7.2",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "aws-cdk-lib": "^2.37.1",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.1.74",
    "copyfiles": "^2.4.1",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "glob": "^7.2.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-junit": "^14.0.0",
    "prettier": "^2.7.1",
    "release-it": "^15.3.0",
    "rimraf": "^3.0.2",
    "sharp": "^0.30.7",
    "snapshot-diff": "^0.9.0",
    "ts-jest": "^28.0.7",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,ts}"
    ],
    "moduleNameMapper": {
      "^@test$": "<rootDir>/test/index.ts"
    },
    "preset": "ts-jest",
    "resetMocks": true,
    "resetModules": true,
    "restoreMocks": true,
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/cdk.out/",
      "<rootDir>/node_modules/"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./artifacts/jest",
    "outputName": "results.xml"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "releaseName": "${version}"
    },
    "hooks": {
      "after:bump": "rimraf dist && yarn build"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits"
      }
    }
  }
}
