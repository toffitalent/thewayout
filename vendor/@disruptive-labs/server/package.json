{
  "name": "@disruptive-labs/server",
  "version": "1.12.0",
  "description": "Disruptive Labs server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/disruptive-labs/server.git",
  "author": "Disruptive Labs",
  "license": "UNLICENSED",
  "files": [
    "README.md",
    "dist/"
  ],
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc",
    "lint": "tsc --noEmit && eslint . --ext .js,.ts",
    "prepare": "husky install",
    "release": "release-it",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@types/koa": "^2.13.5",
    "@types/koa-compose": "^3.2.5",
    "@types/koa-router": "^7.4.4",
    "@types/koa__cors": "^3.3.1",
    "base64-url": "^2.3.3",
    "chalk": "^4.1.1",
    "ioredis": "^5.3.1",
    "joi": "^17.8.3",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.14.1",
    "koa-body": "^6.0.1",
    "koa-compose": "^4.1.0",
    "koa-compress": "^5.1.0",
    "koa-json": "^2.0.2",
    "koa-router": "^10.1.1",
    "lodash": "^4.17.21",
    "path-to-regexp": "^6.2.1",
    "qs": "^6.11.0",
    "statuses": "^2.0.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/base64-url": "^2.2.0",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/koa-compress": "^4.0.3",
    "@types/koa-json": "^2.0.20",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.14.1",
    "@types/qs": "^6.9.7",
    "@types/statuses": "^2.0.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "babel-jest": "^29.4.3",
    "eslint": "8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "jest-junit": "^15.0.0",
    "prettier": "^2.8.4",
    "release-it": "^15.6.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "typescript": "^4.9.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,ts}"
    ],
    "roots": [
      "<rootDir>/src"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./reports/jest",
    "outputName": "results.xml"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "releaseName": "${version}"
    },
    "hooks": {
      "after:bump": "rimraf dist && yarn build"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits"
      }
    }
  }
}
