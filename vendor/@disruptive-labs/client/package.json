{
  "name": "@disruptive-labs/client",
  "version": "0.5.0",
  "description": "Disruptive Labs SPA/app client utils",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "repository": "https://github.com/disruptive-labs/client.git",
  "author": "Disruptive Labs",
  "license": "UNLICENSED",
  "private": false,
  "files": [
    "README.md",
    "dist/",
    "browser/",
    "native/",
    "react/"
  ],
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf coverage dist",
    "lint": "tsc --noEmit && eslint .",
    "prepare": "husky install",
    "release": "release-it",
    "test": "jest --coverage"
  },
  "dependencies": {
    "axios-retry": "^3.4.0",
    "browser-tabs-lock": "^1.2.15",
    "es-cookie": "^1.4.0",
    "eventemitter3": "^5.0.0",
    "jwt-decode": "^3.1.2"
  },
  "peerDependencies": {
    "axios": ">=0.25.0",
    "react": ">=17.0.1 || ^18"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@release-it/conventional-changelog": "^5.1.1",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.4.0",
    "@types/react": "^18.0.27",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "axios": "^0.27.2",
    "babel-jest": "^29.4.1",
    "eslint": "^8.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "jest-environment-jsdom": "^29.4.1",
    "jest-junit": "^15.0.0",
    "nock": "^13.3.0",
    "prettier": "^2.8.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "release-it": "^15.6.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx,ts,tsx}"
    ],
    "resetMocks": true,
    "resetModules": true,
    "restoreMocks": true,
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(es-cookie)/)"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./artifacts/jest",
    "outputName": "results.xml"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "releaseName": "${version}"
    },
    "hooks": {
      "after:bump": "yarn clean && yarn build"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits"
      }
    }
  }
}
