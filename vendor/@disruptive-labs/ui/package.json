{
  "name": "@disruptive-labs/ui",
  "version": "3.3.0",
  "description": "Disruptive Labs UI",
  "repository": "https://github.com/disruptive-labs/ui",
  "author": "Disruptive Labs",
  "license": "UNLICENSED",
  "private": false,
  "files": [
    "README.md",
    "dist/",
    "layouts/package.json",
    "next/package.json"
  ],
  "publishConfig": {
    "access": "restricted",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "sideEffects": [
    "**/*.css",
    "**/*.scss"
  ],
  "scripts": {
    "build": "tsc -b tsconfig.build.json && copyup 'src/**/*.scss' dist/",
    "build-storybook": "storybook build -s ./website/public",
    "clean": "rimraf coverage dist src/icons storybook-static",
    "icons": "svgr -d src/icons --ext tsx --config-file icons/.svgrrc.json --template icons/iconFileTemplate.js node_modules/@tabler/icons/icons",
    "lint": "tsc --noEmit && eslint .",
    "prepare": "husky install",
    "release": "release-it",
    "storybook": "storybook dev -p 6006 -s ../website/public",
    "test": "jest --coverage"
  },
  "peerDependencies": {
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7"
  },
  "optionalDependencies": {
    "next": "^13.4.12"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "aria-hidden": "^1.2.3",
    "classnames": "^2.3.2",
    "dom-helpers": "^5.2.1",
    "downshift": "^7.6.2",
    "normalize.css": "^8.0.1",
    "react-focus-lock": "^2.9.5",
    "react-transition-group": "^4.4.5"
  },
  "devDependencies": {
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@release-it/conventional-changelog": "^7.0.0",
    "@storybook/addon-actions": "^7.3.2",
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/addon-links": "^7.3.2",
    "@storybook/addon-styling": "^1.3.6",
    "@storybook/addons": "^7.3.2",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^7.3.2",
    "@storybook/react-webpack5": "^7.3.2",
    "@storybook/theming": "^7.3.2",
    "@svgr/cli": "^5.5.0",
    "@tabler/icons": "^2.38.0",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.0.1",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/react-transition-group": "^4.4.6",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "autoprefixer": "^10.4.15",
    "babel-jest": "^29.6.3",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-preset-react-app": "^10.0.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.47.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.6.3",
    "jest-environment-jsdom": "^29.6.3",
    "jest-junit": "^16.0.0",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.28",
    "postcss-flexbugs-fixes": "^5.0.2",
    "prettier": "^3.0.2",
    "react": "^18.2.0",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.4",
    "react-test-renderer": "^18.2.0",
    "release-it": "^16.1.5",
    "rimraf": "^3.0.2",
    "sass": "^1.66.1",
    "storybook": "^7.3.2",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{js,jsx,ts,tsx}",
      "!**/*.stories.*",
      "!**/icons/*"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "restoreMocks": true,
    "roots": [
      "<rootDir>/src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.test.ts"
    ],
    "testEnvironment": "jsdom",
    "transformIgnorePatterns": [
      "node_modules/(?!(@popperjs/core.*)/)"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./artifacts/jest",
    "outputName": "results.xml"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true,
      "releaseName": "${version}"
    },
    "hooks": {
      "after:bump": "yarn clean && yarn icons && yarn build"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits"
      }
    }
  }
}
